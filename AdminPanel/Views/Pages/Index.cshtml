@model List<SitePage>

@{

}


<div class="page-title">
    <div class="title">   صفحه اصلی</div>
    <ol class="breadcrumb no-bg pl0">
        <li>
            <a href="javascript:;">پنل سازمان</a>
        </li>
        <li>
            <a href="javascript:;">  صفحه اصلی</a>
        </li>
        <li>
            <a href="javascript:;">  صفحات </a>
        </li>
    </ol>
</div>


<div class="clearfix"></div>


<div class="card bg-white m-b">
    <div class="card-header">
        <p style="padding-top: 8px !important;margin-bottom: 0; float:right">صفحات</p>
    </div>
    <div class="card-block p-a-0">
        <div class="table-responsive">
            @if (Model.Count() != 0)
            {
                <table class="table m-b-0">
                    <tr>
                        <th></th>
                        <th>
                            Name
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th><i class="fa fa-book"></i></th>
                            <td>
                                @item.DefaultTitle
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="/pages/edit/@item.Id">ویرایش</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <div class="alert alert-warning ">
                    هیچ صفحه ای در سایت ثبت نشده
                </div>
            }
        </div>
    </div>
</div>
