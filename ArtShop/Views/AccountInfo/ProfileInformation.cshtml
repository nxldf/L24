@model ProfileInformationViewModel
@{
    ViewBag.Title = "Profile Information | R24";
}
@{var IsRighToLeft = CultureHelper.IsRighToLeft();}

@if (IsRighToLeft)
{
    @Html.Partial("ProfileInformationRTL");
}
else
{

    <div class="row-layout content">

        <div class="row">
            <div class="small-12 large-8 large-push-4 columns bgtext content">
                <div class="row">
                    @using (Html.BeginForm("profileinformation", "accountinfo", FormMethod.Post, new { @class = "", role = "form" }))
                {
                        @Html.AntiForgeryToken()
                        <h3 class="page-title">@ProfileRes.ProfileInfo_header</h3>
                        <p class="mb2">@ProfileRes.ProfileInfo_p1</p>
                        <fieldset class="fields">

                            @Html.LabelFor(m => m.Facebook)
                            <div>
                                @Html.TextBoxFor(m => m.Facebook, new { @class = "wide", id = "Facebook", name = "Facebook", placeholder = "e.g. https://www.facebook.com/R24", type = "text" })
                            </div>

                            @Html.LabelFor(m => m.Twitter)
                            <div>
                                @Html.TextBoxFor(m => m.Twitter, new { @class = "wide", id = "Twitter", name = "Twitter", placeholder = "e.g. https://twitter.com/R24", type = "text" })

                            </div>

                            @Html.LabelFor(m => m.Pinterest)
                            <div>
                                @Html.TextBoxFor(m => m.Pinterest, new { @class = "wide", id = "Pinterest", name = "Pinterest", placeholder = "e.g. https://www.pinterest.com/R24", type = "text" })
                            </div>

                            @Html.LabelFor(m => m.Tumblr)
                            <div>
                                @Html.TextBoxFor(m => m.Tumblr, new { @class = "wide", id = "Tumblr", name = "Tumblr", placeholder = "e.g. http://R24.tumblr.com/", type = "text" })
                            </div>

                            @Html.LabelFor(m => m.Instagram)
                            <div>
                                @Html.TextBoxFor(m => m.Instagram, new { @class = "wide", id = "Instagram", name = "Instagram", placeholder = "e.g. https://instagram.com/R24/", type = "text" })
                            </div>

                            @Html.LabelFor(m => m.GooglePlus)
                            <div>
                                @Html.TextBoxFor(m => m.GooglePlus, new { @class = "wide", id = "GooglePlus", name = "GooglePlus", placeholder = "e.g. https://plus.google.com/+R24", type = "text" })
                            </div>

                            @Html.LabelFor(m => m.Website)
                            <div>
                                @Html.TextBoxFor(m => m.Website, new { @class = "wide", id = "Website", name = "Website", placeholder = "e.g. http://yourwebsite.com", type = "text" })
                            </div>
                        </fieldset>

                        <h3 class="page-title mt1">@ProfileRes.ProfileInfo_header2</h3>
                        <p>@ProfileRes.ProfileInfo_p2</p>
                        <fieldset class="fields">
                            @Html.LabelFor(m => m.AboutMe)
                            <div>
                                @Html.TextAreaFor(m => m.AboutMe, new { @class = "wide", id = "AboutMe", name = "AboutMe", maxlength = "4096", rows = "24", cols = "80" })

                            </div>
                            @Html.LabelFor(m => m.Education)
                            <div>
                                @Html.TextAreaFor(m => m.Education, new { @class = "wide", id = "Education", name = "Education", maxlength = "4096", rows = "24", cols = "80" })
                            </div>

                            @Html.LabelFor(m => m.Events)
                            <div>
                                @Html.TextAreaFor(m => m.Events, new { @class = "wide", id = "Events", name = "Events", maxlength = "4096", rows = "24", cols = "80" })
                            </div>
                            @Html.LabelFor(m => m.Exhibitions)
                            <div>
                                @Html.TextAreaFor(m => m.Exhibitions, new { @class = "wide", id = "Exhibitions", name = "Exhibitions", maxlength = "4096", rows = "24", cols = "80" })
                            </div>
                        </fieldset>

                        <h3 class="page-title mt1">Profile Address</h3>
                        <fieldset class="fields">
                            @Html.LabelFor(m => m.country)
                            <div id="country-input">
                                <select name="CountryId" id="CountryId">
                                    @foreach (var item in ArtShop.Util.CashManager.Instance.Countries)
                                    {

                                        if (item.Key == Model.countryId)
                                        {
                                            <option selected="selected" value="@item.Key">@item.Value</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Key">@item.Value</option>
                                        }


                                    }

                                </select>
                            </div>
                            @Html.LabelFor(m => m.City)
                            <div id="city-input">
                                @Html.TextBoxFor(m => m.City, new { @class = "wide", id = "City", name = "City", type = "text" })

                            </div>
                            <div id="state-section" style="display: none;">
                                @Html.LabelFor(m => m.Region)
                                <div id="state-input">

                                    <select name="state" id="state" state="State">
                                        <option value=""></option>
                                        <option value="AL">Alabama</option>
                                        <option value="AK">Alaska</option>
                                        <option value="AZ">Arizona</option>
                                        <option value="AR">Arkansas</option>
                                        <option value="CA">California</option>
                                        <option value="CO">Colorado</option>
                                        <option value="CT">Connecticut</option>
                                        <option value="DE">Delaware</option>
                                        <option value="DC">District of Columbia</option>
                                        <option value="FL">Florida</option>
                                        <option value="GA">Georgia</option>
                                        <option value="HI">Hawaii</option>
                                        <option value="ID">Idaho</option>
                                        <option value="IL">Illinois</option>
                                        <option value="IN">Indiana</option>
                                        <option value="IA">Iowa</option>
                                        <option value="KS">Kansas</option>
                                        <option value="KY">Kentucky</option>
                                        <option value="LA">Louisiana</option>
                                        <option value="ME">Maine</option>
                                        <option value="MD">Maryland</option>
                                        <option value="MA">Massachusetts</option>
                                        <option value="MI">Michigan</option>
                                        <option value="MN">Minnesota</option>
                                        <option value="MS">Mississippi</option>
                                        <option value="MO">Missouri</option>
                                        <option value="MT">Montana</option>
                                        <option value="NE">Nebraska</option>
                                        <option value="NV">Nevada</option>
                                        <option value="NH">New Hampshire</option>
                                        <option value="NJ">New Jersey</option>
                                        <option value="NM">New Mexico</option>
                                        <option value="NY">New York</option>
                                        <option value="NC">North Carolina</option>
                                        <option value="ND">North Dakota</option>
                                        <option value="OH">Ohio</option>
                                        <option value="OK">Oklahoma</option>
                                        <option value="OR">Oregon</option>
                                        <option value="PA">Pennsylvania</option>
                                        <option value="RI">Rhode Island</option>
                                        <option value="SC">South Carolina</option>
                                        <option value="SD">South Dakota</option>
                                        <option value="TN">Tennessee</option>
                                        <option value="TX">Texas</option>
                                        <option value="UT">Utah</option>
                                        <option value="VT">Vermont</option>
                                        <option value="VA">Virginia</option>
                                        <option value="WA">Washington</option>
                                        <option value="WV">West Virginia</option>
                                        <option value="WI">Wisconsin</option>
                                        <option value="WY">Wyoming</option>
                                    </select>
                                </div>
                            </div>
                            <div id="region-section" style="display: block;">
                                @Html.LabelFor(m => m.Region)
                                <div id="region-input">
                                    @Html.TextBoxFor(m => m.Region, new { @class = "wide", id = "Region", name = "Region", type = "text" })
                                </div>
                            </div>
                            <div id="province-section" style="display: none;">
                                <label>Province</label>
                                <div id="province-input">

                                    <select name="province" id="province">
                                        <option value=""></option>
                                        <option value="AB">Alberta</option>
                                        <option value="BC">British Columbia</option>
                                        <option value="MB">Manitoba</option>
                                        <option value="NB">New Brunswick</option>
                                        <option value="NL">Newfoundland and Labrador</option>
                                        <option value="NT">Northwest Territories</option>
                                        <option value="NS">Nova Scotia</option>
                                        <option value="NU">Nunavut</option>
                                        <option value="ON">Ontario</option>
                                        <option value="PE">Prince Edward Island</option>
                                        <option value="QC">Quebec</option>
                                        <option value="SK">Saskatchewan</option>
                                        <option value="YT">Yukon</option>
                                    </select>
                                </div>
                            </div>
                            @Html.LabelFor(m => m.ZipCode)
                            <div>
                                @Html.TextBoxFor(m => m.ZipCode, new { @class = "input-medium", id = "ZipCode", name = "ZipCode", type = "text" })

                            </div>
                        </fieldset>
                        <fieldset id="so-actions" class="fields mt1">
                            <input type="submit" class="button btn-info mt1" value="@ProfileRes.Save_changes">
                        </fieldset>
                    }
                </div>
            </div>
            <div class="small-12 large-4 large-pull-8 columns bgtext side-nav-container">

                <ul class="side-nav">
                    <li class="profile ">
                        <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/index">@ProfileRes.Account_info</a>
                    </li>
                    <li class="profile active">
                        <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/profileinformation">
                            @ProfileRes.Profile_information
                        </a>
                        <ul class="accordion-list">
                            <li class="profile">
                                <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/uploadavatar">@ProfileRes.Profile_image</a>
                            </li>
                        </ul>
                    </li>

                    <li class="billing">
                        <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/billing">@ProfileRes.Address_Identification</a>
                    </li>

                    <li class="sold">
                        <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/salesdashboard">@ProfileRes.Sales_Dashboard</a>
                    </li>
                    @*<li>
                            <a style="padding-left:20px;" href="/accounts/upload-tax-form">
                                Tax
                                Form
                            </a>
                        </li>*@

                    <li class="purchased">
                        <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/orders">@ProfileRes.Orders</a>
                    </li>


                    @*    <li class="account-sign-out"><a href="/sign-out">@ProfileRes.Logout</a></li>*@
                </ul>



                <div class="clearfix"></div>
            </div>
        </div>

        <script type="text/javascript">
            $('#country').change(updateCityStateRegionBoxes);
            $(document).ready(function () {
                updateCityStateRegionBoxes();
                $(document.location.hash).focus();
            });
            function updateCityStateRegionBoxes() {
                $('#state-section, #region-section, #province-section').css('display', 'none');
                if ($('#country').val() == 'United States') {
                    $('#state-section').css('display', 'block');
                } else if ($('#country').val() == 'Canada') {
                    $('#province-section').css('display', 'block');
                } else {
                    $('#region-section').css('display', 'block');
                }
            }
        </script>


        <div class="clearfix"></div>
    </div>
}
@section scripts{
    @if (ViewBag.ischanged)
    {
        <script>

            $.toast({
                heading: '@ShareRes.Success_message',
                text: '',
                icon: 'success',
                showHideTransition: 'slide',
                position: 'top-right',
                hideAfter: 7000
            })
        </script>
    }

}