                        @* <a href="profile/manageartworks" class="" title="Manage Artworks" itemprop="url">@ProfileRes.Manage_artworks</a>*@
                        @*<span class="profie-link-upload-divider"> | </span>*@
                        <a href="/@CultureHelper.GetCurrentCulture()/upload/review" class="">@ProfileRes.Upload_art</a>
                    </div>
                </div>
            </header>

            <style>
                #loading-indicator {
                    margin: 5px 0 0 5px;
                }
            </style>

            <div class="profile-about small-12 medium-6 large-4 columns" itemscope="" itemtype="http://schema.org/Person">
                <div class="profile-pic">
                    @if (!string.IsNullOrEmpty(Model.photoPath))
                    {
                        if (Model.photoPath.Contains("https"))
                        {
                            <img src="@Model.photoPath" alt="@Model.fullName @ProfileRes.Profile" itemprop="image">
                        }
                        else
                        {
                            <img src="/@Model.photoPath" alt="@Model.fullName @ProfileRes.Profile" itemprop="image">
                        }
                    }
                    else
                    {
                        <img src="//d3t95n9c6zzriw.cloudfront.net/common/profile/avatar_medium_square.jpg" alt="@Model.fullName 's Profile" itemprop="image">
                    }

                    <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/uploadavatar" class="btn-add-profile-image"><i class="fa fa-plus"></i> Add Profile Image </a>
                    <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/uploadavatar" class="btn-round btn-edit" title="Edit"><i class="fa fa-pencil"></i></a>
                </div>

                <h3>
                    <span itemprop="name">@Model.fullName</span>
                    <a href="/@CultureHelper.GetCurrentCulture()/accountinfo/profileinformation" class="btn-round btn-edit" title="Edit"><i class="fa fa-pencil"></i></a>
                </h3>
                <p class="user-location" itemprop="nationality">
                    @Model.city @Model.region  @{ var x = (Model.country == null ? "" : Model.country.Current().Name); }   @x
                </p>

                <div class="profile-links nav">
                    <ul>
                        @if (!string.IsNullOrEmpty(Model.facebook))
                        {
                            <li>
                                <a href="@Model.facebook" class="profile-link link-facebook" title="Facebook" target="_blank" rel="nofollow">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.twitter))
                        {
                            <li>
                                <a href="@Model.twitter" class="profile-link link-twitter" title="Twitter" target="_blank" rel="nofollow">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.pinterest))
                        {
                            <li>
                                <a href="@Model.pinterest" class="profile-link link-pinterest" title="Pinterest" target="_blank" rel="nofollow">
                                    <i class="fa fa-pinterest"></i>
                                </a>
