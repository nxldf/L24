@model ProfileIndexViewModel
@using DataLayer.Extentions
@{var IsRighToLeft = CultureHelper.IsRighToLeft();
    ViewBag.title = Model.fullName + " | R24";
}

@if (IsRighToLeft)
{
    @Html.Partial("indexRTL", Model);
}
else
{
    <div class="limited-filters-mobile__dimmer"></div>
    <div role="main" class="row row-layout profile-content">
        <div id="shareArt" class="share-module" data-url="http://www.cuber.dev/publicprofile?id=@Model.id" style="display: block;">
            <a class="share facebook" data-source="facebook" data-type="share" href="http://facebook.com/sharer.php?u=http%3A%2F%2Fwww.cuber.dev%2Fpublicprofile?id=@Model.id" target="_blank">
                <i class="fa fa-facebook"></i>
            </a>
            <a class="twitter" href="https://twitter.com/intent/tweet?url=http%3A%2F%2Fwww.cuber.dev%2Fpublicprofile?id=@Model.id&amp;text=View+@Model.fullName+on+R24+%40R24" target="_blank">
                <i class="fa fa-twitter"></i>
            </a>
            <a class="share pinterest" href="http://pinterest.com/pin/create/button/?url=http%3A%2F%2Fwww.cuber.dev%2Fpublicprofile?id=@Model.id&amp&media=http:%2F%2Fcuber.dev/@Model.photoPath&description=@Model.fullName+on+R24+%23art" target="_blank">
                <i class="fa fa-pinterest"></i>
            </a>
        </div>

        <article class="profile">
            <header>
                <div class="small-5 medium-6 large-4 columns">
                    <h1 class="ellipsis">
                        <i class="icn-Agency-location flag-@(Model.country.Code == null ? "" : Model.country.Code.ToLower()) so-quick-tip" oldtitle="Iran"></i>
                        <span itemprop="name">@Model.fullName</span>
                    </h1>
                </div>

            </header>

            <style>
                #loading-indicator {
                    margin: 5px 0 0 5px;
                }
            </style>

            <div class="profile-about small-12 medium-6 large-4 columns" itemscope="" itemtype="http://schema.org/Person">
                <div class="profile-pic">
                    @if (!string.IsNullOrEmpty(Model.photoPath))
                    {
                        if (Model.photoPath.Contains("https"))
                        {
                            <img src="@Model.photoPath" alt="@Model.fullName @ProfileRes.Profile" itemprop="image">
                        }
                        else
                        {
                            <img src="/@Model.photoPath" alt="@Model.fullName @ProfileRes.Profile" itemprop="image">
                        }
                    }
                    else
                    {
                        <img src="//d3t95n9c6zzriw.cloudfront.net/common/profile/avatar_medium_square.jpg" alt="@Model.fullName 's Profile" itemprop="image">
                    }


                </div>

                <h3>
                    <span itemprop="name">@Model.fullName</span>

                </h3>
                <p class="user-location" itemprop="nationality">
                    @Model.city @Model.region @{ var x = (Model.country == null ? "" : Model.country.Current().Name); }   @x
                </p>

                <div class="profile-links nav">
                    <ul>
                        @if (!string.IsNullOrEmpty(Model.facebook))
                        {
                            <li>
                                <a href="@Model.facebook" class="profile-link link-facebook" title="Facebook" target="_blank" rel="nofollow">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.twitter))
                        {
                            <li>
                                <a href="@Model.twitter" class="profile-link link-twitter" title="Twitter" target="_blank" rel="nofollow">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.pinterest))
                        {
                            <li>
                                <a href="@Model.pinterest" class="profile-link link-pinterest" title="Pinterest" target="_blank" rel="nofollow">
                                    <i class="fa fa-pinterest"></i>
                                </a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.tumbler))
                        {
                            <li>
                                <a href="@Model.tumbler" class="profile-link link-tumblr" title="Tumblr" target="_blank" rel="nofollow">
                                    <i class="fa fa-tumblr"></i>
                                </a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.instagram))
                        {
                            <li>
                                <a href="@Model.instagram" class="profile-link link-instagram" title="Instagram" target="_blank" rel="nofollow">
                                    <i class="fa fa-instagram"></i>
                                </a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.googlePlus))
                        {
                            <li>
                                <a href="@Model.googlePlus" class="profile-link link-google-plus" title="Google Plus" target="_blank" rel="nofollow">
                                    <i class="fa fa-google-plus"></i>
                                </a>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.myWebsite))
                        {
                            <li>
                                <a href="@Model.myWebsite" class="profile-link link-globe" title="My Website" target="_blank" rel="nofollow">
                                    <i class="fa fa-globe"></i>
                                </a>
                            </li>
                        }


                    </ul>
                </div>

                @*<div class="about-follow-nav">
                    <a href="/account/following/994144" rel="nofollow">
                    <span>1</span> Following
                    </a>
                    <a href="/account/followers/994144">
                    <span>0</span> Followers
                    </a>
                    </div>*@

                @if (!string.IsNullOrEmpty(Model.aboutme))
                {
                    <section itemprop="description">
                        <h3>
                            @ProfileRes.About

                        </h3>
                        <p class="expandable" style="display: block;">@Model.aboutme</p>
                    </section>
                }


                @if (!string.IsNullOrEmpty(Model.education))
                {
                    <section itemprop="description">
                        <h3>
                            @ProfileRes.Education

                        </h3>
                        <p class="expandable" style="display: block;">@Model.aboutme</p>
                    </section>
                }

                @if (!string.IsNullOrEmpty(Model.events))
                {
                    <section class="events">
                        <h3>
                            @ProfileRes.Events:

                        </h3>
                        <p class="expandable" style="display: block;">@Model.events</p>

                    </section>
                }

                @if (!string.IsNullOrEmpty(Model.Exhibitions))
                {
                    <section class="events">
                        <h3>
                            @ProfileRes.Exhibitions:

                        </h3>
                        <p class="expandable" style="display: block;">@Model.Exhibitions</p>

                    </section>
                }

                <div class="clearfix"></div>

            </div>
            <aside role="complementary" class="aside-portfolio small-12 medium-6 large-8 columns">

                @if (Model.artworkCount == 0)
                {

                }
                else
                {

                    <div id="hero-image-mask" class="small-12 medium-12 large-10 columns editable fast-fade portfolio-hero" style="background-image: url(@Model.artworks.FirstOrDefault().photo.Path)" itemscope="" itemtype="http://schema.org/CreativeWork">
                        <img id="hero-image-container" src="" width="100%" height="100%" itemprop="image" class="hidden">
                        <a href="@Url.Action(@Model.artworks.FirstOrDefault().category.Current().Name,"Artwork", new { id=@Model.artworks.FirstOrDefault().GenerateSlug() })" title="Link to Artwork" itemprop="url">
                            <img id="hero-image-crop" class="" src="https://dfcdths9j2gip.cloudfront.net/media/images/blank.gif" width="100%" height="100%" itemprop="image">
                        </a>

                    </div>

                    <div class="small-12 medium-12 large-2 columns">

                        @for (int i = 1; i <= Model.artworks.Count - 1; i++)
                    {

                        var item = Model.artworks[i];

                        if (item.photo == null)
                        {

                                <div class="small-tn" itemscope="" itemtype="http://schema.org/CreativeWork">
                                    <a href="/@CultureHelper.GetCurrentCulture()/publicprofile/artworks?id=@Model.id" title="Link to Artwork" itemprop="url">
                                        <img src="//d3t95n9c6zzriw.cloudfront.net/common/placeholder-square-93.jpg" alt="" itemprop="image">
                                    </a>
                                </div>

                            }
                            else
                            {

                                <div class="small-tn" itemscope="" itemtype="http://schema.org/CreativeWork">
                                    <a href="@Url.Action(@item.category.Current().Name,"Artwork", new { id=@item.GenerateSlug() })" title="Link to Artwork" itemprop="url">
                                        <img src="@item.Sqphoto.Path" alt="" itemprop="image">
                                    </a>

                                </div>
                            }

                        }

                    </div>
                }
                <h5>
                    <a href="/@CultureHelper.GetCurrentCulture()/publicprofile/artworks?id=@Model.id" title="Link to Artwork">
                        <i class="fa fa-suitcase"></i> @ProfileRes.Artwork <span>(@Model.artworkCount)</span>
                    </a>
                </h5>

                <div class="heroSaveCancel" style="display:none;">
                    <a href="#" class="btn-info" onclick="Saatchi.Profile.heroPositionSave();return false;">
                        Save
                       @* <img id="loading-indicator" class="loading" src="/media/images/status/loading/button.gif" style="display: none;">*@
                    </a>
                    <a href="#" class="btn-cancel" onclick="Saatchi.Profile.heroPositionCancel();return false;">@ProfileRes.Cancel</a>
                </div>
            </aside>

            <div class="small-12 medium-6 large-8 columns buckets">

                <aside role="complementary" class="row aside-collections ">
                    <h5 class="editable fast-fade"><a href="/@CultureHelper.GetCurrentCulture()/publicprofile/collection?id=@Model.id" title="Link to Collections"><i class="fa fa-th"></i> @ProfileRes.Collections <span>(@Model.collectionsCount)</span></a></h5>
                </aside>

                <aside role="complementary" class="row aside-favorites">
                    <h5 class="editable fast-fade"><a href="/@CultureHelper.GetCurrentCulture()/publicprofile/favorites?id=@Model.id" title="Link to Favorites"><i class="fa fa-heart"></i> @ProfileRes.Favorites <span>(@Model.favoritesCount)</span></a></h5>

                </aside>

            </div>


