@using Blog.Extentions;
@using Blog.Objects;
@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
@model IList<Category>

<header>

    <div class="btn-group">
        <button type="button" class="btn btn-block dropdown-toggle" data-toggle="dropdown" style="background:#f3f3f3" aria-haspopup="true" aria-expanded="false">
            @if (culture == "en-us")
            {
                <img style="width:20px;float:left;opacity:1" class="pchl desktop-navigation__context-logo desktop-navigation__context-logo--saatchiart" src="~/Content/Images/united-states.svg">
                <span class="lnsp" style="padding-left:5px;color:black;font-size:13px">English <i class="fa fa-caret-down"></i></span>
            }
            else
            {
                <img style="width:20px;float:left;opacity:1;" class="pchl desktop-navigation__context-logo desktop-navigation__context-logo--saatchiart" src="~/Content/Images/iran.svg">
                <span class="lnsp" style="padding-left:5px;color:black;font-size:13px">فارسی<i class="fa fa-caret-down" style="margin-left:6px"></i></span>
            }
        </button>

        <div class="dropdown-menu">
            <a href="/fa/Home/SetCulture?culture=fa" style="display:block;margin-left:7px">
                <img style="width:20px;float:left;opacity:1;" class="desktop-navigation__context-logo desktop-navigation__context-logo--saatchiart" src="~/Content/Images/iran.svg">
                <span style="padding-left:5px;color:black;font-size:13px">فارسی</span>
            </a>
            <div class="dropdown-divider"></div>
            <a href="/en-us/Home/SetCulture?culture=en-us" style="display:block;margin-left:7px">
                <img style="width:20px;float:left;opacity:1;" class="desktop-navigation__context-logo desktop-navigation__context-logo--saatchiart" src="~/Content/Images/united-states.svg">
                <span style="padding-left:5px;color:black;font-size:13px">English</span>
            </a>
        </div>
    </div>


    <div class="row hidden-xs hidden-sm" style="margin-top:-30px">
        <div class="col-lg-offset-4 col-lg-4 main-logo" style="padding-top:0px">
            <h1>
                <a href="https://eyes.cuber.dev/@CultureHelper.GetCurrentCulture()" title="R24">Blog</a>
            </h1>
        </div><!-- .main-logo -->
    </div><!-- .row -->

    <div class="row hidden-xs hidden-sm">
        <div class="col-lg-12">
            <nav class="menu-primary-navigation-container">
                <ul id="primary-menu" class="nav clearfix">
                    <li id="menu-item-47373" class="mobile-item menu-item menu-item-type-custom menu-item-object-custom current-menu-item current_page_item menu-item-home menu-item-47373"><a href="http://cuber.dev/">Artsiscovery</a></li>
                    @foreach (var item in Model)
                    {
                        <li id="menu-item-42540" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-42540"><a href="@Url.RouteUrl("Category", new { id = @item.GenerateSlug()})">@item.Current().Name</a> </li>
                    }
                    <li id="menu-item-42552" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-42552"><a href="@Url.Action("","Search", new { id = ""})">@Resources.SearchRes.Search</a></li>
                </ul>
            </nav>
        </div><!-- .col-lg-12 -->
    </div><!-- .row -->

    <div class="row hidden-md hidden-lg">
        <div class="dropdown mobile-menu">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                <span class="mobile-logo"></span>
                <span class="mobile-tagline">A blog by R24</span>
                <span class="fa fa-chevron-down"></span>
            </button>

            <ul id="menu-primary-navigation" class="dropdown-menu">
                <li class="mobile-item menu-item menu-item-type-custom menu-item-object-custom current-menu-item current_page_item menu-item-home menu-item-47373"><a href="http://Artsiscovery.com/">Artsiscovery</a></li>
                @foreach (var item in Model)
                {
                    <li id="menu-item-42540" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-42540"><a href="@Url.RouteUrl("Category", new { id = @item.GenerateSlug() })">@item.Current().Name</a></li>
                }
                <li id="menu-item-42552" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-42552"><a href="@Url.Action("","Search", new { id = ""})">@Resources.SearchRes.Search</a></li>
            </ul>
        </div><!-- .drowpdown -->
    </div><!-- .row -->
</header>
