<script>
    function parsContent(result) {
        if (result == "done") {
            $.toast({
                heading: 'Success',
                text: 'subscription successful',
                icon: 'success',
                showHideTransition: 'slide',
                position: 'top-right',
                hideAfter: 7000
            })
        } else {

            $('#ajaxrender').html(result);
        }
    }

    var page = 1;
    function LoadMore() {
        page++;
        $.get("/@CultureHelper.GetCurrentCulture()/home/more?page=" + page, function (data) {
            $(".holder").append(data);
        });
    }
